<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="15"
      style="-fx-padding: 20; -fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pancreatitis.ui.usersViewControl">

    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Список пользователей" styleClass="section-header">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Добавить пользователя" styleClass="footer-button" />
        </HBox>

        <!-- Search -->
        <HBox styleClass="search-bar" alignment="CENTER_LEFT" spacing="10">
            <TextField promptText="Поиск по ФИО, email или телефону..." HBox.hgrow="ALWAYS" />
            <Button text="Найти" />
        </HBox>

        <!-- Table -->
        <TableView fx:id="usersTable" prefHeight="400.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colNamePerson" text="ФИО" prefWidth="250.0" />
                <TableColumn fx:id="colDataReg" text="Дата регистрации" prefWidth="150.0" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0" />
                <TableColumn fx:id="colPhoneNumber" text="Телефон" prefWidth="150.0" />
                <TableColumn fx:id="colRole" text="Роль" prefWidth="120.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Footer -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Экспорт в Excel" styleClass="footer-button" />
            <Button text="Удалить выбранного" styleClass="footer-button" />
        </HBox>
    </children>
</VBox>