<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="524.0" prefWidth="506.0" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.pankr.ui.DoctorTableViewController">
    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>

    <TableView fx:id="tableView" prefHeight="1500.0" prefWidth="482.0">
        <columns>
            <TableColumn fx:id="colNamePerson" prefWidth="217.0" text="ФИО пациента" />
            <TableColumn fx:id="colDoctor" prefWidth="273.0" text="ФИО ответственного врача" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="8.0">
        <TextField fx:id="tfNamePerson" promptText="First name" />
        <TextField fx:id="tfDoctor" promptText="Last name" />
        <Button text="Add" onAction="#onAdd"/>
        <Button text="Delete" onAction="#onDelete" />
    </HBox>
</VBox>
